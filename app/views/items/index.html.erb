<div class = "container">
<h3>Here are all your <%= @list.title %> items:</h3> <br />

<div class = "row">

<% for item in @items %>
    <div class = "col-xs-6 col-md-2"><%= item.name %> </div>

    <div class = "col-xs-6 col-md-2"><%= link_to 'Edit Item', edit_list_item_path(@list, item) %> | 
    <%= link_to 'Delete', list_item_path(@list, item), :method => :delete, data: { confirm: 'Are you sure?' } %></div>


    <br />
    <br />

<% end %>

</div>

<br />

<%= link_to 'Add Item', new_list_item_path(@list) %> | 
<%= link_to 'Back to this List', @list %>
</div>